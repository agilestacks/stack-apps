{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cloudcode.kubernetes",
      "request": "launch",
      "name": "%s: Run on Kubernetes",
      "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
      "watch": true,
      "cleanUp": true,
      "portForward": true,
      "imageRegistry": "cluster1-harbor.app.cluster1.bluesky.superhub.io/library"
    },
    {
      "type": "cloudcode.kubernetes",
      "language": "Python",
      "request": "attach",
      "debugPort": 3000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "name": "%s: Attach to running container",
      "podSelector": {
        "app": "%s"
      },
      "imageRegistry": "cluster1-harbor.app.cluster1.bluesky.superhub.io/library"
    },
    {
      "name": "%s: Run locally",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "src/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true
    }
  ]
}
