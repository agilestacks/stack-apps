{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Pylint",
      "type": "shell",
      "command": "python3",
      "args": [
        "-m",
        "pylint",
        "**/*.py"
      ],
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "problemMatcher": []
    },
    {
      "label": "Skaffold",
      "type": "shell",
      "command": "skaffold",
      "args": [
        "${input:skaffoldArg}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "SKAFFOLD_PROFILE": "incluster"
        },
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "SuperHub",
      "type": "shell",
      "command": "make",
      "problemMatcher": [],
      "args": [
        "${input:superhubArg}"
      ],
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}/.hub"
      }
    },
    {
      "label": "Delete secret docker-cfg",
      "type": "shell",
      "command": "kubectl",
      "args": [
        "delete",
        "secret",
        "docker-cfg"
      ],
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "skaffoldArg",
      "description": "Skaffold command",
      "options": [
        "dev",
        "run",
        "build",
        "deploy",
        "delete",
        "debug"
      ],
      "default": "dev",
      "type": "pickString"
    },
    {
      "id": "superhubArg",
      "description": ".hub make command",
      "options": [
        "clean generate",
        "clean",
        "generate"
      ],
      "default": "clean generate",
      "type": "pickString"
    }
  ]
}
